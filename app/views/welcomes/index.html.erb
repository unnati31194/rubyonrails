<h1> All Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3">Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td> <% blog.comments.each do |comment| %>
          <%= comment.name %>
          <br/>
           <%= comment.body %>
           <br/>
             <% end %>
           <%= link_to 'comment', new_comment_path %>
        </td>
       
        
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name_file_name %></td>
       <td> <% image.comments.each do |comment| %>
          <%= comment.name %>
          <br/>
           <%= comment.body %>
           <br/>
             <% end %>
           <%= link_to 'comment', new_comment_path %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Place</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3"> Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.place %></td>
        <td><%= event.date %></td>
        <td><%= event.description %></td>
         <td> <% event.comments.each do |comment| %>
          <%= comment.name %>
          <br/>
           <%= comment.body %>
           <br/>
             <% end %>
           <%= link_to 'comment', new_comment_path %>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>